<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Albums

    <a data-toggle="collapse" href="#artist_albums_new_form">
      Add album
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @artist.albums.each do |album| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to album, album %>

        <%= link_to album, method: :delete, data: { confirm: "Do you really want to delete this album" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="artist_albums_new_form">
        <%= render partial: "artists/artist_albums_new_form" %>
      </div>
    </div>

  </ul>
</div>
