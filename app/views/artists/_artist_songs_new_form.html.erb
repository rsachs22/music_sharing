<%= form_with(model: @song, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :album_id %>

    <%= f.collection_select :album_id, Album.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :artist_id, value: @artist.id %>

  <%= f.submit "Create song", class: "btn btn-block btn-outline-secondary" %>
<% end %>
