<%= form_with(model: @album, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :album_art %>

    <%= f.text_field :album_art, class: "form-control" %>
  </div>

  <%= f.hidden_field :genre_id, value: @genre.id %>

  <div class="form-group">
    <%= f.label :artist_id %>

    <%= f.collection_select :artist_id, Artist.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create album", class: "btn btn-block btn-outline-secondary" %>
<% end %>
