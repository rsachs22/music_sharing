<div class="card mb-3">
  <h2 class="card-header h4">
    Album Review #<%= album_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @album_review.user.present? %>
          <%= link_to album_review.user, album_review.user %>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= album_review.body %></dd>

      <dt>Title</dt>
      <dd><%= album_review.title %></dd>

      <dt>Stars</dt>
      <dd><%= album_review.stars %></dd>

      <dt>Album</dt>
      <dd>
        <% if @album_review.album.present? %>
          <%= link_to album_review.album, album_review.album %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back album_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_album_review_url(album_review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to album_review, method: :delete, data: { confirm: "Do you really want to delete this album_review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(album_review.updated_at) %> ago
  </div>
</div>
