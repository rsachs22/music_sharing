<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Song Reviews

    <a data-toggle="collapse" href="#user_song_reviews_new_form">
      Add song review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.song_reviews.each do |song_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to song_review, song_review %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_song_reviews_new_form">
        <%= render partial: "users/user_song_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
