<%= form_with(model: @song_review, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= f.label :body %>

    <%= f.text_field :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :stars %>

    <%= f.text_field :stars, class: "form-control" %>
  </div>

  <%= f.hidden_field :song_id, value: @song.id %>

  <%= f.submit "Create song review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
