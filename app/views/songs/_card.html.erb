<div class="card mb-3">
  <h2 class="card-header h4">
    Song #<%= song.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= song.name %></dd>

      <dt>Album</dt>
      <dd>
        <% if @song.album.present? %>
          <%= link_to song.album, song.album %>
        <% end %>
      </dd>

      <dt>Artist</dt>
      <dd>
        <% if @song.artist.present? %>
          <%= link_to song.artist, song.artist %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back song, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_song_url(song), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to song, method: :delete, data: { confirm: "Do you really want to delete this song?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(song.updated_at) %> ago
  </div>
</div>
