<%= form_with(model: @album_review, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>

    <%= f.text_field :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :stars %>

    <%= f.text_field :stars, class: "form-control" %>
  </div>

  <%= f.hidden_field :album_id, value: @album.id %>

  <%= f.submit "Create album review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
