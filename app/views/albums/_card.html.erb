<div class="card mb-3">
  <h2 class="card-header h4">
    Album #<%= album.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= album.name %></dd>

      <dt>Album art</dt>
      <dd><%= album.album_art %></dd>

      <dt>Genre</dt>
      <dd>
        <% if @album.genre.present? %>
          <%= link_to album.genre, album.genre %>
        <% end %>
      </dd>

      <dt>Artist</dt>
      <dd>
        <% if @album.artist.present? %>
          <%= link_to album.artist, album.artist %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back album, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_album_url(album), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to album, method: :delete, data: { confirm: "Do you really want to delete this album?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(album.updated_at) %> ago
  </div>
</div>
