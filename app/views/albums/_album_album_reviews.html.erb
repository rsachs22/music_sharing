<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Album Reviews

    <a data-toggle="collapse" href="#album_album_reviews_new_form">
      Add album review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @album.album_reviews.each do |album_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to album_review, album_review %>

        <%= link_to album_review, method: :delete, data: { confirm: "Do you really want to delete this album_review" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="album_album_reviews_new_form">
        <%= render partial: "albums/album_album_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
