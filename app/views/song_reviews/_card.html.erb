<div class="card mb-3">
  <h2 class="card-header h4">
    Song Review #<%= song_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @song_review.user.present? %>
          <%= link_to song_review.user, song_review.user %>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= song_review.body %></dd>

      <dt>Title</dt>
      <dd><%= song_review.title %></dd>

      <dt>Stars</dt>
      <dd><%= song_review.stars %></dd>

      <dt>Song</dt>
      <dd>
        <% if @song_review.song.present? %>
          <%= link_to song_review.song, song_review.song %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back song_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @song_review.user %>
          <%= link_to edit_song_review_url(song_review), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @song_review.user %>
          <%= link_to song_review, method: :delete, data: { confirm: "Do you really want to delete this song_review?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(song_review.updated_at) %> ago
  </div>
</div>
